{
    "sink": {
        "url": "${ZMQ_ENDPOINT}",
        "options": {
            "send_timeout": {
                "secs": 1,
                "nanos": 0
            },
            "send_retries": 3,
            "receive_timeout": {
                "secs": 1,
                "nanos": 0
            },
            "receive_retries": 3,
            "send_hwm": 1000,
            "receive_hwm": 1000,
            "inflight_ops": 100
        }
    },
    "rtsp_sources": {
        "group0": {
            "sources": [
                {
                    "source_id": "main",
                    "url": "${RTSP_MAIN_URI}"
                },
                {
                    "source_id": "overlay",
                    "url": "${RTSP_OVERLAY_URI}"
                }
            ],
            "rtcp_sr_sync": {
                "group_window_duration": {
                    "secs": 5,
                    "nanos": 0
                },
                "batch_duration": {
                    "secs": 0,
                    "nanos": 22000000
                }
            }
        }
    },
    "reconnect_interval": {
        "secs": 5,
        "nanos": 0
    },
    "eos_on_restart": true
}